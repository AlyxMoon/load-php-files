{
  "name": "alyxmoon/load-php-files",
  "type": "grav-plugin",
  "description": "This plugin provides an easy way for users to create pages and load arbitrary PHP files as the content for that page.",
  "keywords": ["plugin"],
  "homepage": "https://github.com/AlyxMoon/grav-plugin-load-php-files",
  "license": "MIT",
  "authors": [
    {
      "name": "Allister Kays",
      "email": "allisterkmoon@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.1.3"
  },
  "autoload": {
    "psr-4": {
      "Grav\\Plugin\\LoadPhpFiles\\": "classes/"
    },
    "classmap":  ["load-php-files.php"]
  },
  "config": {
    "platform": {
      "php": "7.1.3"
    }
  }
}
